{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch an application",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/${workspaceFolderBasename}",
            "args": [
                "3"
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=${workspaceFolderBasename}"
                ]
            },
            "program": "${cargo:program}",
            "args": [
                "19"
            ]
        }
    ]
}